{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "dist",
    "declaration": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declarationMap": true,
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "shims.d.ts",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}